{
  "name": "git-preflight",
  "displayName": "Git Preflight",
  "description": "Pre-commit diff review tool",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-preflight.showDiff",
        "title": "Git Preflight: Show Diff"
      }
    ],
    "keybindings": [
      {
        "command": "git-preflight.showDiff",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
