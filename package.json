{
  "name": "git-preflight",
  "displayName": "Git Preflight",
  "publisher": "plainionist",
  "description": "Pre-commit diff review tool",
  "version": "1.2.1",
  "license": "BSD-3-Clause",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/plainionist/git-preflight"
  },
  "keywords": ["git", "diff", "review", "commit"],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["SCM Providers"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-preflight.showDiff",
        "title": "Git Preflight: Show Diff"
      }
    ],
    "keybindings": [
      {
        "command": "git-preflight.showDiff",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
